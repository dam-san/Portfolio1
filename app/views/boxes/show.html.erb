<div class="row mt-5">
  <div class="col-lg-4">
    <div class="card">
      <!--<img class="card-img-top" src="/images/pathToYourImage.png" alt="Card image cap">-->
      <div class="card-body">
        <h4 class="card-title text-light"><%= @box.name %></h4>
            <% if @box.relation.present? %>
            親
            <p class="text-light"><%= link_to @box.parent.name,box_path(@box.parent) %></p>
            <%end %>
            場所
            <p class="text-light"><%= @box.place.place %></p>
            <% if @box.kind ==1 %>
              幹線サイズ
              <p class="text-light"><%= @box.relation.cable_size%></p>
            <% end %>
            <%= link_to 'Edit', edit_box_path(@box),  class: "btn btn-sm btn-outline-info"%>
            <%= link_to 'Destroy', box_path(@box), method: :delete, data: { confirm: '本当に消しますか？' },class: "btn btn-sm btn-outline-warning"%>

      </div>
    </div>
    <div class="mt-5">
      <%= render 'brakers/form', braker: @braker %>
    </div>
  </div>


    <div class="col-lg-7">
      <%= render 'brakers/index', brakers: @brakers %>
    </div>

  </div>