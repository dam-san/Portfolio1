<table class='table'>

  <thead>
     <tr>
       <th></th>
       <th>許容電流</th>
       <th>電圧</th>
       <th></th>
       <th></th>
     </tr>
  </thead>

  <tbody>
     <% n=0 %>
     <%  brakers.each do |braker|  %>
       <% n+=1 %>
       <tr>
         <td><%= link_to n,  braker_path(braker),  class: "btn btn-sm btn-info"%></td>
         <td>
           <%= braker.size%> [A]
        </td>
        <td>
           <%= braker.volt %> [V]
        </td>
        <td>
           <%= link_to 'Edit', edit_braker_path(braker),  class: "btn btn-sm btn-info"%>
        </td>

         <td>
            <%= link_to 'Destroy', braker_path(braker), method: :delete, class: "btn btn-sm btn-danger"%>
        </td>
       </tr>
     <% end %>
  </tbody>

</table>