<h4 class="mt-5 white">検索ワード：「<%= @info%>」</h4>

  <div class="row mt-5">
      <div class="col-lg-8">

          <table class='table table-bordered'>

            <thead>
               <tr><th>名前</th><th>設置場所</th></tr>
            </thead>

            <tbody>
               <%  @lists.each do |list|  %>
                 <tr>
                   <%if @type=="機器の検索" %>
                       <td><%= link_to list.name, machine_path(list), local: true , class: "" %></td>
                       <td class="text-light"><%= list.place.place %></td>
                    <% elsif @type=="変電所や分電盤の検索" %>
                       <td><%= link_to list.name, box_path(list), local: true , class: "" %></td>
                       <td class="text-light"><%= list.place.place %></td>
                    <%end%>
                 </tr>
               <% end %>
            </tbody>

          </table>

      </div>

  </div>